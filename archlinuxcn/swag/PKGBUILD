pkgname=swag
pkgver=1.16.6
pkgrel=2
pkgdesc='Automatically generate RESTful API documentation with Swagger 2.0 for Go.'
arch=('x86_64')
url="https://github.com/swaggo/swag"
license=('MIT')
makedepends=('go' git)
source=(source::"git+https://github.com/swaggo/swag#tag=v$pkgver")
sha256sums=('9f46bcc25d02c84499bf9c7cede955f57b8cbee945be789163764e996316de2c')

build() {
  cd source
  export CGO_CPPFLAGS="${CPPFLAGS}"
  export CGO_CFLAGS="${CFLAGS}"
  export CGO_CXXFLAGS="${CXXFLAGS}"
  export CGO_LDFLAGS="${LDFLAGS}"
  export GOFLAGS="-buildmode=pie -ldflags=-linkmode=external -mod=readonly -modcacherw"
  make build
}

check() {
  cd source
  make test
}

package() {
  cd source
  install -Dm755 swag "$pkgdir/usr/bin/swag"
}
