optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('909f834a5e12388197ca100089cfb57378a625369e1942cd077fd4cdb56706169d29a826c72089ad5e01e5fd5a1e40da564d1a7f8e3b5a4d103533f9ecd0a49f')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

