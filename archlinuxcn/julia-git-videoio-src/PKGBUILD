pkgname=julia-git-videoio-src
pkgver=1.3.0
_commit=6722199244795f69e158b1d88c9b97a80a55cfa7
pkgrel=1
pkgdesc="VideoIO.jl"
url="https://github.com/JuliaIO/VideoIO.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/JuliaIO/VideoIO.jl.git#commit=$_commit"
        0001-Remove-deprecated-ticks_per_frame.patch
        0002-Support-both-FFMPEG-7-and-8.patch)
sha256sums=('0d4792ba160b0cb4170e510698e3fb5afd4d1fee7e2df91e6c0642da0d69a4dd')

prepare() {
  cd VideoIO.jl

  patch -Np1 --no-backup-if-mismatch < "../0001-Remove-deprecated-ticks_per_frame.patch"
  patch -Np1 --no-backup-if-mismatch < "../0002-Support-both-FFMPEG-7-and-8.patch"
}

package() {
  cd VideoIO.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh VideoIO "${pkgdir}" "${pkgname}" julia-git
}
